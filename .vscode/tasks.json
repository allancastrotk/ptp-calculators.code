{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Frontend: npm install",
      "type": "shell",
      "command": "npm install",
      "options": { "cwd": "${workspaceFolder}/frontend-api" }
    },
    {
      "label": "Frontend: npm run dev",
      "type": "shell",
      "command": "npm run dev",
      "options": { "cwd": "${workspaceFolder}/frontend-api" }
    },
    {
      "label": "Frontend: npm run build",
      "type": "shell",
      "command": "npm run build",
      "options": { "cwd": "${workspaceFolder}/frontend-api" }
    },
    {
      "label": "Backend: pip install",
      "type": "shell",
      "command": "python -m pip install -r requirements.txt",
      "options": { "cwd": "${workspaceFolder}/backend-api" }
    },
    {
      "label": "Backend: uvicorn",
      "type": "shell",
      "command": "uvicorn app.main:app --host 0.0.0.0 --port 8000",
      "options": { "cwd": "${workspaceFolder}/backend-api" }
    },
    {
      "label": "Backend: pytest",
      "type": "shell",
      "command": "pytest -q",
      "options": { "cwd": "${workspaceFolder}/backend-api" }
    }
  ]
}